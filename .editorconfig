root = true

[*.{kt,kts}]
# Basic configuration
max_line_length = 120
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Wildcard imports
ktlint_standard_no-wildcard-imports = disabled
ktlint_function_naming_ignore_when_annotated_with = Composable

# Name convention
ktlint_standard_property-naming = enabled
ktlint_standard_class-naming = enabled
ktlint_standard_function-naming = enabled
ktlint_standard_package-naming = enabled

# Experimental
ktlint_experimental = enabled
ktlint_experimental_rules = enabled

ktlint_standard_parameter-list-wrapping = enabled
ktlint_standard_function-signature = enabled

ktlint_standard_max-line-length = enabled

ktlint_standard_trailing-comma-on-call-site = enabled
ktlint_standard_trailing-comma-on-declaration-site = enabled

ktlint_standard_composing-functions = disabled

[**/build/**/*.kt]
ktlint = disabled

[**/*.gradle.kts]
ktlint = disabled

[**/src/commonTest/kotlin/**/*.kt]
ktlint = disabled

[**/src/test/kotlin/**/*.kt]
ktlint = disabled

[**/resources/**]
ktlint = disabled

[**/src/**/test/**/*.kt]
ktlint_standard_function-naming = disabled
ktlint_standard_max-line-length = disabled

[**/main.kt]
ktlint_standard_function-naming = disabled
ktlint_standard_class-naming = disabled
ktlint_standard_filename = disabled

[**/MainViewController.kt]
ktlint_standard_function-naming = disabled